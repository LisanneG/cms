<%= form_for @answer do |f| %>
  <div class="form-group">
    <%= f.label :answer %><br>
    <%= f.text_field :answer, :class => "form-control" %>
  </div>
 
  <div class="form-group">
    <%= f.check_box :correct %>
    <%= f.label :correct %>
  </div>
 
  <p>
    <%= f.submit :class => "btn btn-success" %>
  </p>
<% end %>