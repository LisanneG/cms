<p>
  <%= @question.question %>
</p>

<h2>Answers</h2>
<table class="table table-hover">
  <thead>
    <th>Answer</th>
    <th>Correct</th>
    <th>Destroy</th>
  </thead>
  <tbody>
    <% @question.answers.each do |answer| %>
    <tr>
        <td><%= answer.answer %></td>
        <td><%= answer.correct %></td>
        <td><%= link_to 'Destroy', [answer.question, answer],
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>Add Answer</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
    <p>
    <%= f.label :answer %>
    <%= f.text_field :answer %>
    </p>
    <p>
      <%= f.label :correct %>
      <%= f.check_box :correct %>
    </p>

    <p>
      <%= f.submit %>
    </p>
    <% end %>
<%= link_to 'back', questions_path, :class => "btn btn-default" %>
