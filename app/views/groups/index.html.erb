<%#= link_to 'Add a new Group', new_group_path, :class => 'btn btn-info location_btn' %>
<button type="button" class="btn btn-info location_btn" data-toggle="modal" data-target="#addQuestion">Add a new group</button>

<table id="groups" class="table table-hover">
    <thead>
        <tr>
            <th>Group</th>
            <th class="g_id">ID</th>
            <th>&nbsp;</th>
            <th>Buttons</th>
        </tr>
    </thead>
    <tbody>
    <% @groups.each do |group| %>
    <tr>
        <td class="l_title"><strong><%= group.group %></strong></td>
        <td class="group_key"><strong>ID: <%= group.key %></strong></td>
        <td class="td_destroy"><%= link_to 'Show', group_path(group), :class => 'btn btn-default' %></td>
        <td class="td-destroy"><%= link_to image_tag("destroy"), group_path(group), method: :delete, data: { confirm: 'Are you sure?', swal: {text: 'By confirming this you will delete this location', type: 'warning', confirm_button_text: 'Ok'} }, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
    </tbody>
</table>


<%= form_for @group do |f| %>
<% if @group.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@group.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div id="addQuestion" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">What is the group name?</h4>
      </div>
      <div class="modal-body">
        <%= f.text_field :group, :class => "form-control group_new", placeholder: "Enter the name of the group here..." %>
        <%= f.hidden_field :key %>        
      </div>
      <div class="modal-footer">
        <%= f.submit :class => "btn btn-success" %>
        <!-- <button type="button" class="btn btn-info" data-dismiss="modal">Create question</button> -->
      </div>
    </div>

  </div>
</div>
<% end %>