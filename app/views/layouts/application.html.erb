<!DOCTYPE html>
<html>
<head>
  <title>Cms</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div id="navigation">
  <div id="schoolclash_text"><a href="/"><%= image_tag("schoolclash") %></a></div>
  <% if not admin_signed_in? %>
      <div class="disabled">
  <% end %>
  <ul>
    <li class="active"><%= image_tag("home1") %><%= link_to 'Locations', locations_path, :class => 'btn' %></li>
    <li><%= image_tag("vragen") %><%= link_to 'Questions', questions_path, :class => 'btn' %></li>
    <li><%= image_tag("gebruikers1") %><%= link_to 'Add Admin', new_admin_registration_path, :class => 'btn' %></li>
  </ul>
  <% if not admin_signed_in? %>
      </div>
  <% end %>
</div>
<div id="topbar">
  <p>test</p>
  <div><%= image_tag("logout") %><%= link_to('Logout', destroy_admin_session_path, :method => :delete, :class => 'btn') %></div>
</div>
<div class="container body">
  <br>
  <% if notice != nil %>
      <p class="notice alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert != nil %>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <%= yield %>
</div>
</body>
</html>