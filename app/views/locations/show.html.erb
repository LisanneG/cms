<row>
  <div class="col-md-8 jumbotron">
    <h1>
      <%= @location.title %>
    </h1>

    <p>
      <%= @location.text %>
    </p>
  </div>
  <div class="col-md-4">
    <%= image_tag @location.image_url(:thumb).to_s %>
  </div>
  <div class="col-md-4 jumbotron">
    <h3>locatie</h3>
    <p>
      <strong>latitude(x)</strong>
      <%= @location.y %>
    </p>

    <p>
      <strong>longtitude(y)</strong>
      <%= @location.x %>
    </p>
  </div>
</row>
<br>
<row>
  <div class="col-md-6">
    <h3><%= @question.question %></h3>
    <%= link_to 'Edit', edit_location_path, :class => "btn btn-default" %>
    <%= link_to 'Back', locations_path, :class => "btn btn-default" %>
  </div>

  <div class="col-md-8">
<% if @question.multiple_choice == true %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Answer</th>
        <th>Correct</th>
      </tr>
      </thead>
      <tbody>
        <% @question.answers.each do |answer| %>
          <tr>
            <td><%= answer.answer %></td>
            <td><%= answer.correct %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<% if @question.multiple_choice_image == true %>
  <row>
    <% @question.answers.each do |answer| %>
      <div class="col-md-4">
        <%= image_tag answer.picture_url(:thumb).to_s %>
      </div>
    <% end %>
  </row>
<% end %>

<% if @question.open == true %>
    Dit is een Open Vraag
<% end %>
    <%= link_to 'Edit Answers', question_path(@question), :class => "btn btn-default" %>
  </div>
</row>
