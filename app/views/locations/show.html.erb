<% if @question.multiple_choice == true %>
  <row>
    <div class="col-md-8">
      <div class="location-general">
        <h1>
          <%= @location.title %>
        </h1>
        <p>
          <%= @location.text %>
        </p>
      </div>

      <div class="location-question">
        <p>
         <h3><%= @question.question %></h3>
        </p>
      </div>

      <div id="location-answer-table">
        <table class="table table-hover" id="location-answer-table">
          <thead>
          <tr>
            <th>Answer</th>
          </tr>
          </thead>
          <tbody>
          <% @question.answers.each do |answer| %>
              <% if answer.correct? %>
                  <tr class="success">
                    <td><%= answer.answer %></td>
                  </tr>
              <% else %>
                  <tr>
                    <td><%= answer.answer %></td>
                  </tr>
              <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </row>
<% end %>


<% if @question.multiple_choice_image == true %>
    <row>
      <div class="col-md-8">
        <div class="location-general">
          <h1>
            <%= @location.title %>
          </h1>
          <p>
            <%= @location.text %>
          </p>
        </div>

        <div class="location-question">
          <p>
            <h3><%= @question.question %></h3>
          </p>
        </div>
        <% @question.answers.each do |answer| %>
            <tr>
              <td><%= image_tag answer.picture_url.to_s, class: "question-image-answer"  %></td>
            </tr>
          <% end %>
      </div>
    </row>
<% end %>

<% if @question.open == true %>
    <row>
      <div class="col-md-8">
        <div class="location-general">
          <h1>
            <%= @location.title %>
          </h1>
          <p>
            <%= @location.text %>
          </p>
        </div>

        <div class="location-question">
          <p>
          <h3><%= @question.question %></h3>
          </p>
        </div>
      </div>
    </row>
<% end %>



  <div class="col-md-4">
    <p>
      <%= link_to 'Edit', edit_location_path, :class => "btn btn-default" %>
      <%= link_to 'Back', locations_path, :class => "btn btn-default" %>
    </p>
    <div class="location-image">
      <%= image_tag @location.image_url.to_s, class: "location-image" %>
    </div>
    <div class="location-cor">
      <p>
        longtitude:
        <strong><%= @location.y %></strong><br>
      </p>
      <p>
        latitude:
        <strong><%= @location.x %></strong>
      </p>
    </div>
  </div>

<% if @question.open? %>
  <row>
    <p>
      Dit is een open vraag en heeft dus geen antwoorden.
    </p>
  </row>
<% else %>
  <row>
    <div class="col-md-8">
      <%= link_to 'Edit Answers', question_path(@question), :class => "btn btn-default" %>
    </div>
  </row>
<% end %>
