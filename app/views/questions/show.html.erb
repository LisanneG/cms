<h3 class="jumbotron">
  <%= @question.question %>
</h3>




<% if @question.multiple_choice == true %>

<h2>Answers</h2>

<table class="table table-hover">
  <thead>
    <th>Answer</th>
    <th>Correct</th>
    <th>#</th>
    <th>#</th>
  </thead>
  <tbody>
    <% @question.answers.each do |answer| %>
    <tr>
        <td><%= answer.answer %></td>
        <td><%= answer.correct %></td>
        <td><%= answer.picture %></td>
        <td><%= link_to 'Destroy', [answer.question, answer],
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  <div class="jumbotron col-md-8">
    <h2>Add Answer</h2>
    <%= form_for([@question, @question.answers.build]) do |f| %>
        <p>
          <%= f.label :answer %>
          <%= f.text_field :answer %>
        </p>
        <p>
          <%= f.label :correct %>
          <%= f.check_box :correct %>
        </p>
        <p>
          <%= f.submit %>
        </p>

    <% end %>
    <%= link_to 'back', questions_path, :class => "btn btn-default" %>
  </div>
<% end %>

<% if @question.multiple_choice_image == true %>
    <row>
    <% @question.answers.each do |answer| %>
      <div class="col-md-4">
        <%= image_tag answer.picture_url(:thumb).to_s %>

          <% if answer.correct? %>
            <p>Correct</p>
          <% else %>
            <br>
          <% end %>

        <%= link_to 'Destroy', [answer.question, answer],
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      </div>
    <% end %>
    </row>
    <div class="jumbotron col-md-8">
      <h2>Add Answer</h2>
      <%= form_for([@question, @question.answers.build]) do |f| %>
          <p>
            <%= f.file_field :picture %>
          </p>
          <p>
            <%= f.label :correct %>
            <%= f.check_box :correct %>
          </p>
          <p>
            <%= f.submit %>
          </p>
      <% end %>
      <%= link_to 'back', questions_path, :class => "btn btn-default" %>
    </div>
<% end %>

<% if @question.open == true %>
    Dit is een open vraag<br>
    <%= link_to 'back', questions_path, :class => "btn btn-default" %>
<% end %>


