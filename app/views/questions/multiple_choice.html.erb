<h1>Question with multiple choice</h1>
<div class="row">
  <div class="col-md-7 title block">
    <%= @question.question %>
  </div>
  <%= form_for([@question, @question.answers.build]) do |f| %>
      <div class="col-md-4 btns bigscreen col-md-offset-1">
        <%= link_to 'Cancel', questions_path, :class => "link-back float-right" %>
      </div>
      </div>

      <div class="row">
        <div class="col-md-7 create_answer block">
          <%= f.label :answer %>
          <%= f.text_field :answer %>
          <br>
          <p>
            <%= f.label :correct %>
            <%= f.check_box :correct %><br>
            <%= f.submit :class => "btn btn-success" %>
          </p>
        </div>
      </div>
  <% end %>

  <table id="answers" class="table table-hover">
    <thead>
    <th>Answer</th>
    <th>Correct</th>
    <th></th>
    </thead>
    <tbody>
    <% @question.answers.each do |answer| %>
        <tr>
          <td class="l_title"><%= answer.answer %></td>
          <td>
            <% if answer.correct == true %>
                <%= image_tag("checked.png") %>
            <% else %>
                <%= image_tag("cancel.png") %>
            <% end %>
          </td>
          <td class="td_destroy">
            <%= link_to image_tag("destroy"), [answer.question, answer], method: :delete, data: { confirm: 'Are you sure?', swal: {text: 'By confirming this you will delete this location', type: 'warning', confirm_button_text: 'Ok'} }, :class => "btn btn-danger" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
